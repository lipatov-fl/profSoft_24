<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_app">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/greetings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/greeting_margin_bottom"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/greeting"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_app"
        app:fontFamily="@font/roboto_medium" />

    <Button
        android:id="@+id/first_activity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_rounded_all_shape"
        android:paddingStart="@dimen/padding_start_btn_first_act"
        android:paddingTop="@dimen/padding_top_btn_first_act"
        android:paddingEnd="@dimen/padding_end_btn_first_act"
        android:paddingBottom="@dimen/padding_bottom_btn_first_act"
        android:text="@string/btn_start_intent"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_app"
        app:backgroundTint="@null"
        app:fontFamily="@font/roboto_medium" />

</LinearLayout>